  static async webhookPost(req, res) {
    try {
      const body = req.body;

      // Verificamos que el objeto principal sea de WhatsApp
      if (body.object !== 'whatsapp_business_account') {
        return res.sendStatus(404);
      }

      // Obtenemos el n√∫mero del bot (display_phone_number)
      const telefonoWhats = body.entry?.[0]?.changes?.[0]?.value?.metadata?.display_phone_number;
      if (!telefonoWhats) {
        console.log('‚ö†Ô∏è No se encontr√≥ n√∫mero de WhatsApp en el evento');
        return res.sendStatus(200);
      }

      // Verificamos licencia activa
      const tel = await Admin.findByPhone(telefonoWhats);
      if (!tel || tel.license_status !== 'active') {
        console.log('‚ö†Ô∏è Licencia inactiva o no encontrada para', telefonoWhats);
        return res.sendStatus(200);
      }

      // Procesamos solo si hay mensajes reales
      body.entry.forEach(entry => {
        entry.changes.forEach(change => {
          const value = change.value;

          // ‚úÖ Ignorar eventos sin mensajes (por ejemplo, statuses)
          if (!value || !value.messages || value.messages.length === 0) {
            console.log('‚ÑπÔ∏è Evento sin mensajes entrantes, ignorado');
            return;
          }

          const metadata = value.metadata || {};
          const botNumber = metadata.display_phone_number;
          const waId = value.contacts?.[0]?.wa_id;

          // Guardamos n√∫meros en servicio
          BotNumberService.setPhoneNumberClient(waId);
          BotNumberService.setBotNumber(botNumber);

          value.messages.forEach(message => {
            // ‚ö†Ô∏è Ignorar mensajes enviados por el propio bot
            if (message.from_me) {
              console.log('üí¨ Mensaje enviado por el bot, se ignora');
              return;
            }

            // ‚ö†Ô∏è Solo procesar mensajes de texto
            if (message.type !== 'text') {
              console.log('üìé Mensaje no de texto (tipo:', message.type, '), ignorado');
              return;
            }

            // ‚úÖ Procesar el mensaje entrante real
            processIncomingMessage(message, botNumber);
          });
        });
      });

      res.status(200).send('OK');
    } catch (error) {
      console.error('‚ùå Error en webhookPost:', error);
      res.sendStatus(500);
    }
  }

